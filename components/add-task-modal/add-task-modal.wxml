<!--components/add-task-modal/add-task-modal.wxml-->
<view class="modal-container" wx:if="{{show}}" catchtap="preventTouchMove">
  <!-- 蒙层 -->
  <view class="modal-mask animate-mask"></view>

  <!-- 弹窗内容 -->
  <view class="modal-content animate-content">
    <!-- 弹窗标题 -->
    <view class="modal-header">
      <text class="modal-title">创建新任务</text>
      <view class="modal-close" bindtap="closeModal">
        <text class="close-icon">×</text>
      </view>
    </view>

    <!-- 弹窗表单 -->
    <view class="modal-body">
      <!-- 任务名称输入框 -->
      <view class="form-item">
        <view class="form-label">任务名称</view>
        <input
          class="form-input"
          placeholder="请输入任务名称"
          value="{{taskName}}"
          bindinput="onTaskNameInput"
        />
      </view>

      <!-- 任务图标输入框 -->
      <view class="form-item">
        <view class="form-label">图标</view>
        <input
          class="form-input"
          placeholder="请输入图标文件名（如：gongzuo.png）"
          value="{{taskIcon}}"
          bindinput="onTaskIconInput"
        />
      </view>
    </view>

    <!-- 弹窗底部按钮 -->
    <view class="modal-footer">
      <button class="modal-btn modal-btn-cancel" bindtap="onCancel">取消</button>
      <button class="modal-btn modal-btn-confirm" bindtap="onConfirm">确认</button>
    </view>
  </view>
</view>
