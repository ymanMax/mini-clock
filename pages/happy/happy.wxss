.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.page-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
}

.games-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  gap: 20rpx;
}

.game-item {
  width: 48%;
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  text-align: center;
  transition: all 0.3s ease;
  cursor: pointer;
}

.game-item:active {
  transform: scale(0.95);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
}

.game-item.disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.game-item.disabled:active {
  transform: none;
}

.game-icon {
  width: 80rpx;
  height: 80rpx;
  margin: 0 auto 20rpx;
  border-radius: 50%;
  background-color: #ff5556;
  display: flex;
  align-items: center;
  justify-content: center;
}

.game-icon-text {
  font-size: 40rpx;
  line-height: 1;
}

.game-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.game-desc {
  font-size: 22rpx;
  color: #666;
  line-height: 1.4;
}
