.game-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.score-board {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0.9);
  padding: 20rpx 40rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.score-label {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
}

.score-value {
  font-size: 48rpx;
  color: #ff5556;
  font-weight: bold;
  margin-left: 10rpx;
}

.game-grid {
  display: grid;
  grid-template-columns: repeat(8, 1fr);
  gap: 8rpx;
  padding: 20rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.3);
}

.grid-item {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
  position: relative;
  overflow: hidden;
}

.grid-item:active {
  transform: scale(0.95);
}

.grid-item.selected {
  box-shadow: 0 0 0 4rpx #fff, 0 0 0 8rpx #ff5556;
  transform: scale(1.05);
  z-index: 10;
}

.grid-item.eliminated {
  animation: eliminate 0.5s ease-out forwards;
}

@keyframes eliminate {
  0% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.2);
    opacity: 0.5;
  }
  100% {
    transform: scale(0);
    opacity: 0;
  }
}

.letter {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.control-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
  flex-wrap: wrap;
  justify-content: center;
}

.btn {
  padding: 20rpx 40rpx;
  border-radius: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
}

.btn:active {
  transform: scale(0.95);
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.btn-warning {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.btn-success {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.btn-danger {
  background: linear-gradient(135deg, #ff5556 0%, #ff7b7b 100%);
}
