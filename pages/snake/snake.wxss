.container {
  background-color: #1a1a1a;
  min-height: 100vh;
  padding: 20rpx;
}

.game-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.score-info, .high-score-info {
  text-align: center;
}

.score-label, .high-score-label {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 8rpx;
}

.score-value, .high-score-value {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #ff5556;
}

.game-container {
  position: relative;
  width: 100%;
  height: 600rpx;
  background-color: #0a0a0a;
  border-radius: 16rpx;
  overflow: hidden;
}

.game-canvas {
  width: 100%;
  height: 100%;
  display: block;
}

.game-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.overlay-content {
  text-align: center;
  padding: 40rpx;
}

.overlay-title {
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
}

.overlay-message {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.overlay-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.game-button {
  padding: 24rpx 48rpx;
  background-color: #ff5556;
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.game-button:active {
  transform: scale(0.95);
  background-color: #e04445;
}

.game-button.secondary {
  background-color: rgba(255, 255, 255, 0.2);
  color: white;
}

.game-button.secondary:active {
  background-color: rgba(255, 255, 255, 0.3);
}

.game-controls {
  position: absolute;
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 5;
}

.control-button {
  padding: 20rpx 40rpx;
  background-color: rgba(255, 85, 86, 0.8);
  color: white;
  border: none;
  border-radius: 10rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.control-button:active {
  transform: scale(0.95);
  background-color: rgba(224, 68, 69, 0.8);
}
